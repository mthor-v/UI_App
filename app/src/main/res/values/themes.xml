<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.UI_App" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="button_log">
        <item name="android:layout_centerHorizontal">true</item>
        <item name="backgroundTint">@color/button_color</item>
        <item name="android:textColor">@color/button_font</item>
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/kdam_thmor_pro</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="signup_input_field">
        <!-- Field properties-->
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:width">270dp</item>
        <item name="android:paddingTop">4dp</item>
        <!-- Text properties-->
        <item name="fontFamily">@font/kdam_thmor_pro</item>
        <item name="android:textColor">@color/input_color</item>
        <item name="android:textSize">21sp</item>
    </style>
    <style name="icon_signup">
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">50dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>
    <style name="main_buttons">
        <item name="android:textSize">20sp</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="etLogin_style" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">#08313A</item>
        <item name="colorControlActivated">#107869</item>
        <item name="android:textColorHighlight">#5CD85A</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">#08313A</item>
        <item name="fontFamily">@font/titilliumweb_regular</item>
    </style>
    <style name="etSignUp_style" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">#08313A</item>
        <item name="colorControlActivated">#107869</item>
        <item name="android:textColorHighlight">#5CD85A</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">#08313A</item>
        <item name="android:layout_marginLeft">70dp</item>
        <item name="android:layout_marginRight">70dp</item>
        <item name="android:textColorHint">@color/button_color</item>
        <item name="fontFamily">@font/titilliumweb_regular</item>
    </style>
    <style name="home_button">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_marginLeft">50dp</item>
        <item name="android:layout_marginRight">50dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:fontFamily">@font/kdam_thmor_pro</item>
        <item name="android:textSize">21sp</item>
        <item name="android:textAlignment">textStart</item>
    </style>
</resources>
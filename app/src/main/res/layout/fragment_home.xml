<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HomeFragment"
    android:background="@drawable/background_home">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Â¡Elige tu servicio!"
        android:textAlignment="center"
        android:layout_marginVertical="15dp"
        android:textSize="25sp"
        android:textStyle="bold"
        android:fontFamily="@font/gentiumbookplus_regular"/>

    <Button
        style="@style/home_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Diligenciar Formato"
        app:icon="@drawable/ic_baseline_add_business_24" />

    <Button
        style="@style/home_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Consultar Prestador"
        app:icon="@drawable/ic_baseline_search_24" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:icon="@drawable/ic_baseline_create_24"
        style="@style/home_button"
        android:text="Editar Formato"/>

    <Button
        android:id="@+id/btnLogout"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="400dp"
        app:icon="@drawable/ic_baseline_exit_to_app_24" />


</LinearLayout>